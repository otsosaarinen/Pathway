<Page x:Class="Pathway.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pathway"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="HomePage">

	<Grid>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

			<Button Content="Create New File Transfer" 
                    Click="NewFileTransfer_Click" 
                    Width="200" Height="40" Margin="0,0,0,10"/>

			<ListBox x:Name="TransfersListBox" Width="600" Height="150"/>

			<Grid Width="225" Margin="0,10,0,0">

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				
				<Button Width="100" Height="40" Grid.Column="0">Run</Button>
				<Button Width="100" Height="40" Grid.Column="1">Delete</Button>
			</Grid>
		</StackPanel>

	</Grid>

</Page>
